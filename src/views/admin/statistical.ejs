
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Tổng số người dùng</h5>
                <p class="card-text"><%= soluong %></p>
            </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title">Lời nhuận/tháng</h5>
                <p class="card-text"><%= tong_loi_nhuan %></p>
            </div>
            </div>
        </div>
        </div>
        <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title">Những đơn đặt hàng gần đây</h5>
                <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Tổng</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < Math.min(paieds.length, 10); i++) { %>
                    <tr>
                        <th scope="row">1</th>
                        <td><%= paieds[i].products[0].product_name %></td>
                        <td>$<%= paieds[i].products[0].price %></td>
                        <td><%= paieds[i].products[0].amount %></td>
                        <td>$<%= paieds[i].products[0].price*paieds[i].products[0].amount %></td>
                    </tr>
                    <% } %>
                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* Style the card titles */
.card-title {
  color: #4CAF50; /* Green color */
  text-align: center; /* Center align text */
}

/* Style the card bodies */
.card-body {
  background-color: #f5f5f5; /* Light gray background */
  border: 1px solid #ccc; /* Add a light gray border */
  border-radius: 5px; /* Rounded corners */
  text-align: center; /* Center align text */
  padding: 15px; /* Add padding to the card body */
  margin-bottom: 20px; /* Add margin at the bottom of each card */
}

/* Style the table headers */
.table thead th {
  background-color: #4CAF50; /* Green color */
  color: white; /* White text color */
}

/* Style the alternating rows in the table */
.table tbody tr:nth-child(even) {
  background-color: #f9f9f9; /* A slightly darker shade of gray */
}

h1 {
  text-decoration: underline; /* Hiển thị gạch chân dưới */
  text-shadow: 2px 2px 4px #392121; /* Tạo bóng với màu đỏ (#FF0000), căn x,y,z lần lượt là 2px, 2px, 4px */
  color: #ff1010; /* Màu chữ */
  text-transform: uppercase;
}
</style>