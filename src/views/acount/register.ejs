<div class="body-account">
  <div class="wrapper">
    <form method="POST" action="/handleRegister">
      <h1>Đăng ký</h1>
      <div>
        <% if (error) { %>
          <p><%= error %></p>
        <% } %> 
      </div>
      <div class="input-box">
        <input type="text" placeholder="Vui lòng nhập tên..."
          class="form-control" id="name" name="name"
          required>
      </div>
      <div class="input-box">
        <input type="text" placeholder="Vui lòng nhập mail..."
          class="form-control" id="email" name="email"
          required>
      </div>

      <div class="input-box">
        <input type="password" placeholder="Vui lòng nhập mật khẩu..."
          class="form-control" id="password" name="password"
          required>
      </div>
      
      <div class="input-box">
        <input type="password" placeholder="Vui lòng nhập lại mật khẩu..."
          class="form-control" id="password-again" name="password_again"
          required>
      </div>
      <div class="input-box">
        <input type="text" placeholder="Vui lòng nhập địa chỉ..."
          class="form-control" id="address" name="address"
          required>
      </div>
      
  
      <button type="submit" class="btn">Đăng ký</button>
  
      <div class="register-link">
        <p style="color: #45a049;">You have an account?
          <a style="color: #4CAF50;" href="/login">Đăng nhập</a>
        </p>
      </div>
    </form>
  </div>
</div>

<style>
  
  .input-box input::placeholder {
    color: #45a049; /* Màu xám nhạt cho chữ placeholder */
  }

  .body-account {
  margin:20px 0;
  background-image: url('https://haycafe.vn/wp-content/uploads/2022/03/Background-anime-Conan-cute.jpg');
  background-size: cover;
  height: 100vh; /* Adjust the height as needed */
  display: flex;
  justify-content: center;
  align-items: center;
}

.body-account .wrapper {
  margin: 0 auto;
  margin-left: 100px; 
  width: 40%;
  background-color: rgba(226, 255, 255, 0.8); /* Semi-transparent white background */
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  text-align: center; /* Horizontally center the form */
}
 

  .body-account form {
    max-width: 400px;
    margin: 0 auto;
  }

  .body-account h1 {
    text-align: center;
    color: #4CAF50; /* Màu xanh lá cây */
    margin-bottom: 20px;
  }

  .error-message {
    text-align: center;
    margin-bottom: 20px;
    color: red; /* Màu đỏ cho thông báo lỗi */
  }

  .input-box {
    margin-bottom: 20px;
  }

  .input-box input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .btn {
    display: block;
    width: 100%;
    padding: 15px;
    margin-bottom: 20px;
    background-color: #44d049; /* Màu xanh lá cây cho nút */
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn:hover {
    background: linear-gradient(to right, #1FADFF, #12fbbd, #b0fda7);
  }

  .register-link {
    text-align: center;
  }

  .register-link a {
    color: #4CAF50; /* Màu xanh lá cây cho đường dẫn Đăng nhập */
    text-decoration: none;
  }


</style>